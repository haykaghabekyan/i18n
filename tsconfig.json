 {
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "esnext"],
        "allowJs": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "baseUrl": ".",  // This sets the base directory for your paths.
        "paths": {
            "@/*": ["./*"]  // This maps the `@/` alias to the root directory.
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}